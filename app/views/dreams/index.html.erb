<h1>Listing dreams</h1>

<table>
  <thead>
    <tr>
      <th>Dream</th>
      <th>User id</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dreams.each do |dream| %>
      <tr>
        <td><%= dream.dream %></td>
        <td><%= dream.user.email if dream.user%></td>
        <td><%= link_to 'Show', dream %></td>
        <% if dream.user == current_user %>
        <td><%= link_to 'Edit', edit_dream_path(dream) %></td>
        <td><%= link_to 'Destroy', dream, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <% end %>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Dream', new_dream_path %>
<% end %>
