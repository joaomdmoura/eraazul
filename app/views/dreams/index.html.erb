
<div id="dreams" class="transitions-enabled">

    <% @dreams.each do |dream| %>
      <div class="box panel panel-default">
        <%= image_tag dream.image.url(:medium) %>
        <div class="panel-body">
       <%= dream.dream %>
        <%= dream.user.email if dream.user%>
       <%= link_to 'Show', dream_path(dream) %>
        <% if dream.user == current_user %>
        <%= link_to 'Edit', edit_dream_path(dream) %>
       <%= link_to 'Destroy', dream, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
      </div>  
    <% end %>
   </div> 

